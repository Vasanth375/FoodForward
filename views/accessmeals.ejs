<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>FoodForward</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/donateicon.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <!-- <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div> -->
        <!-- Spinner End -->


        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0" style="position: absolute;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 999;
            background: transparent !important;">
                <a href="" class="navbar-brand p-0">
                    <h1 class="text-primary m-0"><i class="fa fa-utensils me-3"></i>FoodForward</h1>
                    <!-- <img src="img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0 pe-4">
                        <a href="/homepage" class="nav-item nav-link">Home</a>
                        <a href="/buyfood" class="nav-item nav-link">Buy</a>
                        <a href="/sellfood" class="nav-item nav-link">Sell</a>
                        <a href="/donatefood" class="nav-item nav-link active">Donate</a>
                        <a href="/decomposefood" class="nav-item nav-link">Decompose</a>
                        <a href="/contact" class="nav-item nav-link">Contact Us</a>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile &nbsp;<img src="/img/profileicon.png" alt="">
                            </a>
                            <div class="dropdown-menu" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" href="/profile">My Profile</a>
                                <a class="dropdown-item" href="/sellerdashboard"> Manage Activity</a>
                                <a class="dropdown-item" href="/decomposefood">Settings</a>
                                <a class="dropdown-item" href="/logout">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
                
            </nav>
        <!-- Navbar End -->
    </header>

    <!-- Hero Section Start -->
    <div class="container-xxl py-1 bg-dark hero-header mb-5" style="background: linear-gradient(rgba(15, 23, 43, .9), rgba(15, 23, 43, .9)), url(/img/bg-hero.jpg);
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;">
        <div class="container my-5 py-5">
            <div class="row align-items-center g-5">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="display-6 text-white animated slideInLeft">Access meals</h1>
                    <p class="text-white animated slideInLeft mb-4 pb-2">Even small makes the difference.</p>
                </div>
                <div class="col-lg-6 text-center text-lg-end overflow-hidden">
                    <img class="img-fluid" src="mg/heroo.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Section End -->

        <!-- Access Small Donated Meals Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h2 class="section-title ff-secondary text-center text-primary fw-normal">Access Small Donated Meals</h2>
                </div>
                <div class="row">
                    <!-- Sample Small Donated Meals Data -->
                    <% x.forEach((data) => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= data.itemimg %>" class="card-img" alt="Meal Image" style="height:200px; width: 410px; ">
                            <div class="card-body">
                                <h5 class="card-title">Name:<%= data._doc.itemname %></h5>
                                <p class="card-text">Description:<%= data._doc.itemdesc %></p>
                                <p class="card-text">Adress<%= data._doc.address %></p>
                                <a href="https://wa.me/<%= data._doc.mobileno %>" class="btn btn-success btn-m"><i class="fab fa-whatsapp"></i> WhatsApp</a>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                    <!-- Sample Small Donated Meals Data -->
                </div>
            </div>
        </div>
        <!-- Access Small Donated Meals End -->

        <!-- Access Generously Donated Meals Start -->
        <div class="container-xxl py-5 bg-light">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h2 class="section-title ff-secondary text-center text-primary fw-normal">Access Generously Donated Meals</h2>
                </div>
                <div class="row">
                    <!-- Sample Generously Donated Meals Data -->
                    <% y.forEach((data) => { %>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">Name:<%= data.name %></h5>
                                    <p class="card-text">Description:<%= data.desc %></p>
                                    <p class="card-text">Adress<%= data.address %></p>
                                    <p class="card-text">Date<%= data.date %></p>
                                    <p class="card-text">Time<%= data.time %></p>
                                    <a href="https://wa.me/<%= data.mobileno %>" class="btn btn-success btn-m"><i class="fab fa-whatsapp"></i> WhatsApp</a>
                                </div>
                            </div>
                        </div>
    
                        <% }) %>
                    <!-- Sample Generously Donated Meals Data -->
                </div>
            </div>
        </div>
        <!-- Access Generously Donated Meals End -->

        <!-- Access Essentials Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h2 class="section-title ff-secondary text-center text-primary fw-normal">Access Essentials</h2>
                </div>
                <div class="row">
                    <!-- Sample Small Donated Meals Data -->
                    <% z.forEach((data) => { %>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <img src="<%= data.itemimg %>" class="card-img" alt="Meal Image" style="height:200px; width: 410px; ">
                                <div class="card-body">
                                    <h5 class="card-title">Name:<%= data._doc.itemname %></h5>
                                    <p class="card-text">Description:<%= data._doc.itemdesc %></p>
                                    <p class="card-text">Adress<%= data._doc.address %></p>
                                    <a href="https://wa.me/<%= data._doc.mobileno %>" class="btn btn-success btn-m"><i class="fab fa-whatsapp"></i> WhatsApp</a>
                                </div>
                            </div>
                        </div>
    
                        <% }) %>
                        <!-- Sample Small Donated Meals Data -->

        <!-- Footer (You can include a footer section if needed) -->
        <footer class="footer">
            <div class="container">
                <p>&copy; 2023 FoodForward. All rights reserved.</p>
            </div>
        </footer>
        <!-- Footer End -->

        <!-- Add your JavaScript code here -->

        

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="lib/wow/wow.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/waypoints/waypoints.min.js"></script>
        <script src="lib/counterup/counterup.min.js"></script>
        <script src="lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="lib/tempusdominus/js/moment.min.js"></script>
        <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    </div>
</body>
</html>
